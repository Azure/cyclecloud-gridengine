pe_name            mpi
slots              999
user_lists         NONE
xuser_lists        NONE
start_proc_args    <%= @sgeroot %>/mpi/startmpi.sh -unique $pe_hostfile
stop_proc_args     <%= @sgeroot %>/mpi/stopmpi.sh
allocation_rule    $fill_up
control_slaves     TRUE
job_is_first_task  FALSE
urgency_slots      min
accounting_summary FALSE
<% if node[:gridengine][:version].index("8.1") == 0 %>
qsort_args         NONE
<% end %>
<% if node[:gridengine][:make]=='ge' %>
daemon_forks_slaves    FALSE
master_forks_slaves    FALSE
<% end %>
<% if node[:gridengine][:make]=='ge' && Gem::Version.new(node[:gridengine][:version]) >= Gem::Version.new('8.6.0') %>
per_pe_task_prolog     NONE
per_pe_task_epilog     NONE
<% end %>