[Unit]
Description=Univa Grid Engine Qmaster
After=network.target remote-fs.target

[Service]
Type=forking
ExecStart=/bin/sh <%= @gridengineroot %>/<%= @gridenginecell %>/common/sgemaster start
ExecStop=/bin/sh <%= @gridengineroot %>/<%= @gridenginecell %>/common/sgemaster stop

[Install]
WantedBy=multi-user.target